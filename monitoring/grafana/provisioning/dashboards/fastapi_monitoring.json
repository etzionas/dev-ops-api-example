{
    "panels": [
      {
        "type": "gauge",
        "title": "FastAPI Job Status",
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "up{job='fastapi'}",
            "format": "time_series",
            "interval": "",
            "intervalFactor": 1,
            "refId": "A"
          }
        ],
        "gauge": {
          "minValue": 0,
          "maxValue": 1,
          "show": true,
          "thresholdLabels": true,
          "thresholdMarkers": true
        },
        "color": {
          "background": false,
          "value": true,
          "text": true,
          "thresholds": {
            "0": "red",
            "1": "green"
          }
        },
        "valueMaps": [
          {
            "value": "1",
            "text": "Up"
          },
          {
            "value": "0",
            "text": "Down"
          }
        ],
        "valueName": "current",
        "textMode": "value",
        "textMappings": [
          {
            "value": "1",
            "text": "Up"
          },
          {
            "value": "0",
            "text": "Down"
          }
        ]
      },
      {
        "type": "singlestat",
        "title": "FastAPI Service Status",
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "up{job='fastapi'}",
            "format": "time_series",
            "refId": "A"
          }
        ],
        "valueName": "current",
        "colors": ["red", "green"],
        "thresholds": "0,1",
        "mappingTypes": [
          {
            "name": "value to text",
            "value": 1
          },
          {
            "name": "value to text",
            "value": 0
          }
        ],
        "sparkline": {
          "show": true,
          "fillColor": "rgba(31, 118, 189, 0.18)",
          "lineColor": "rgb(31, 120, 193)"
        },
        "valueMaps": [
          {
            "value": "1",
            "text": "Up"
          },
          {
            "value": "0",
            "text": "Down"
          }
        ]
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    }
  }
  